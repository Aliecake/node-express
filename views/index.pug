extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

      h1.name Lauren Eggers

      //-desc
      p.lead.text-light
        | Self taught with  a passion for Node.js and PWAs. I'm currently a TAP student and ready to pursue my dream as a full stack developer.
  article.grid-container.portfolio-index

    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

      each project in projects.reverse()
        .cell
          a(href=`/project/${project.id}`)
            if project.image_urls[1]
              img.thumbnail(src=`${project.image_urls[1]}`)
            else
              img.thumbnail(src=`${project.image_urls[0]}`)
              h5= project.project_name
        
