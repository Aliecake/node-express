<!DOCTYPE html>
html(class="no-js" lang="en" dir="ltr")
  head
    meta(charset='utf-8')
    meta(http-equiv='x-ua-compatible', content='ie=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Portfolio Site
    link(href='https://fonts.googleapis.com/css?family=Merriweather:300,400,400i,700,800', rel='stylesheet')
    link(rel='stylesheet', href='/static/css/foundation.min.css')
    link(rel='stylesheet', href='/static/css/brands.css')
    link(rel='stylesheet', href='/static/css/style.css')
    link(rel="manifest" href="/static/images/site.webmanifest")
    link(rel='favicon', sizes='64x64', href='/static/images/favicon.ico')
    link(rel="mask-icon" href="/static/images/safari-pinned-tab.svg" color="#5bbad5")
    link(rel="shortcut icon" href="/static/images/favicon.ico")
    meta(name="msapplication-TileColor" content="#da532c")
    meta(name="msapplication-config" content="/static/images/browserconfig.xml")
    meta(name="theme-color" content="#ffffff")

  body
    #my-info.off-canvas.position-left.reveal-for-large.portfolio-me(data-off-canvas='')
      .grid-y.grid-padding-x(style='height: 100%;')
        block sidebar
          br
          .cell.shrink
            img.logo(src='/static/images/le.png')
            img.thumbnail(src=`/static/images/lauren.JPG`)
          .cell.auto
            p.text-light.description
              a(href='https://github.com/aliecake' target='_blank')
                i.fab.fa-github
            p.text-light.description
              a(href='https://www.linkedin.com/in/laureneggers/' target='_blank')
                i.fab.fa-linkedin
            p.text-light.description
              a(href='/static/fullStackLaurenEggers.pdf' target="_blank") Resume
            p.text-light.description
              a(href='/about') About
    .off-canvas-content(data-off-canvas-content='')
      .title-bar.hide-for-large
        .title-bar-left
          button.menu-icon(type='button', data-toggle='my-info', aria-label='my-info')

          //- This is for the mobile screen sized version.
          span.title-bar-title Lauren Eggers
      block content



  script(src='/static/js/vendor/jquery.js')
  script(src='/static/js/vendor/what-input.js')
  script(src='/static/js/vendor/foundation.js')
  script(src='/static/js/vendor/all.min.js')
  script(src='/static/js/scripts.js')
